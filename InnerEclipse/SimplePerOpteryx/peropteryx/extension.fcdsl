import "platform:/resource/SimplePerOpteryx/palladio/repository.repository"
import "platform:/resource/SimplePerOpteryx/peropteryx/FCompletion.featurecompletion"

multiple ExtensionInclusion extensionIncl _ZZ {
	description bla
	pointCut {
		PointCut allDoPayCalls {
			placementStrategy ExternalCallPlacementStrategy {
				matchingSignature doPay
			}
		},
		PointCut allActionsIn {
			placementStrategy InternalActionPlacementStrategy {
				forAllInternalActionsIn ComponentTgtMandatory
			}
		},
		PointCut allControlFlowsIn {
			placementStrategy ControlFlowPlacementStrategy {
				forAllControlFlowsIn ComponentTgtOptional
			}
		}
	}
	
	advice {
		Advice {
			appears BEFORE 
			pointCut allDoPayCalls
			Completion CV_A
		},
		Advice {
			appears BEFORE 
			pointCut allActionsIn
			Completion CV_A
		},
		Advice {
			appears BEFORE 
			pointCut allControlFlowsIn
			Completion CV_A
		}
	}
}