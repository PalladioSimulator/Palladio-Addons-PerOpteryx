<plugin>

   <extension point="org.eclipse.ui.newWizards">
      <category
            id="org.eclipse.emf.ecore.Wizard.category.ID"
            name="%_UI_Wizard_category"/>
      <wizard
            id="de.uka.ipd.sdq.pcm.taskmodel.presentation.taskmodelModelWizardID"
            name="%_UI_taskmodelModelWizard_label"
            class="de.uka.ipd.sdq.pcm.taskmodel.presentation.taskmodelModelWizard"
            category="org.eclipse.emf.ecore.Wizard.category.ID"
            icon="icons/full/obj16/taskmodelModelFile.gif">
         <description>%_UI_taskmodelModelWizard_description</description>
         <selection class="org.eclipse.core.resources.IResource"/>
      </wizard>
   </extension>

   <extension point="org.eclipse.ui.editors">
      <editor
            id="de.uka.ipd.sdq.pcm.taskmodel.presentation.taskmodelEditorID"
            name="%_UI_taskmodelEditor_label"
            icon="icons/full/obj16/taskmodelModelFile.gif"
            extensions="taskmodel"
            class="de.uka.ipd.sdq.pcm.taskmodel.presentation.taskmodelEditor"
            contributorClass="de.uka.ipd.sdq.pcm.taskmodel.presentation.taskmodelActionBarContributor">
      </editor>
   </extension>

</plugin>
